extends layout

block content
	.container
		h1 Page de liste de personnage
		p.lead Vous retrouver vos personnages ici.
		br
		form(role='form', action="/register",method="post", style='max-width: 300px;')
			.form-group
				input.form-control(type='text', name="firstname", placeholder='Prénom')
			.form-group
				input.form-control(type='text', name="lastname", placeholder='Nom de famille')
			.form-group
				input.form-control(type='text', name="type", placeholder='Quelle créature?')
			button.btn.btn-default(type='submit') Submit
			&nbsp;
			a(href='/')
			button.btn.btn-primary(type="button") Cancel